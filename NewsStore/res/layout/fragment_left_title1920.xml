<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/left_bk"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dip"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="30dip"
        android:layout_gravity="center"
        android:scrollbars="none" >

        <LinearLayout
             android:layout_marginTop="30dip"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical" >

            <Button
                android:id="@+id/flfg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/book_selector"
                android:contentDescription="@string/app_name" />

            <Button
                android:id="@+id/al"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:background="@drawable/newspaper_seletor"
                android:contentDescription="@string/app_name" />

            <Button
                android:id="@+id/flwsys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:background="@drawable/print_seletor"
                android:contentDescription="@string/app_name" />

            <Button
                android:id="@+id/movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:visibility="visible"
                android:background="@drawable/movie_seletor"
                android:contentDescription="@string/app_name" />

            <Button
                android:id="@+id/teleplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@drawable/teleplay_seletor"
                android:contentDescription="@string/app_name" />

            <Button
                android:id="@+id/anime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/al"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@drawable/anime_seletor"
                android:contentDescription="@string/app_name" />
 <!--  
            <Button
                android:id="@+id/music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/al"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@drawable/music_seletor"
                android:contentDescription="@string/app_name" />
-->
            <Button
                android:id="@+id/record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/al"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@drawable/record_seletor"
                android:contentDescription="@string/app_name" />
            
            <Button
                android:id="@+id/soft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/al"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:visibility="gone"
                android:background="@drawable/soft_seletor"
                android:contentDescription="@string/app_name" />
        </LinearLayout>
    </ScrollView>

