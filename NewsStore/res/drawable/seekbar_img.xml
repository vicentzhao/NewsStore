<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
                <corners android:radius="90dip" /><gradient
                android:angle="90"
                android:centerColor="#80000000"
                android:centerY="0.45"
                android:endColor="#80000000"
                android:startColor="#80000000" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="90dip" />

                <gradient
                    android:angle="90"
                    android:centerColor="#00c1ff"
                    android:centerY="0.45"
                    android:endColor="#43e9ff"
                    android:startColor="#013c82" />
            </shape>
        </clip>

    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="90dip" />

                <gradient
                    android:angle="90"
                    android:startColor="#00c1aa11" 
                    android:centerColor="#00c1aa22"
                    android:endColor="#00c1aa33"
                    android:centerY="0.45"/>
            </shape>
        </clip>
    </item>

</layer-list>